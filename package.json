{
  "name": "node-ts-boilerplate",
  "description": "Boilerplate for a Node.js backend written in TypeScript and utilizing Postgresdb",
  "version": "1.0.0",
  "main": "src/server.js",
  "private": false,
  "license": "MIT",
  "keywords": [
    "express",
    "node",
    "node.js",
    "mongodb",
    "mongoose",
    "passport",
    "es6",
    "es7",
    "es8",
    "es2017",
    "mocha",
    "istanbul",
    "nyc",
    "eslint",
    "Travis CI",
    "coveralls",
    "REST",
    "API",
    "boilerplate",
    "generator",
    "starter project"
  ],
  "scripts": {
    "build": "tsc",
    "dev:watch": "ts-node-dev --respwn src/server.ts",
    "dev": "ts-node src/server.ts",
    "start": "tsc && node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "tsc": "tsc",
    "tscCheck": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.{js,ts,json}'",
    "clean": "rimraf dist/*",
    "migrate": "node-pg-migrate"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/dotenv-safe": "^8.1.2",
    "@types/express": "^4.17.13",
    "@types/passport-http-bearer": "^1.0.37",
    "@types/passport-jwt": "^3.0.6",
    "@types/pg-format": "^1.0.2",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.36.1",
    "eslint": "^8.22.0",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint"
    }
  },
  "dependencies": {
    "@types/node": "^18.7.9",
    "@types/winston": "^2.4.4",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "csv": "^6.2.0",
    "dotenv-safe": "^8.2.0",
    "express": "^4.18.1",
    "node-pg-migrate": "^6.2.2",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.7.3",
    "pg-format": "^1.0.4",
    "swagger-jsdoc": "^6.2.5",
    "swagger-ui-express": "^4.5.0",
    "uuid": "^8.3.2"
  },
  "volta": {
    "node": "16.16.0"
  }
}
